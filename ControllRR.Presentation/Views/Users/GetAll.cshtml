@model IEnumerable<ControllRR.Application.DTOs.UserDto>
@{
    ViewData["Title"]="Usuarios do Sistema";
}

<h2>@ViewData["Title"]</h2>

    <div class="mt-4">
         <a asp-action="New" class="btn btn-primary">Novo</a>
       
    </div>

     <div class="card mt-4">
        <div class="card-header">
         Lista de Usuarios
     </div>

           <div class="card-body">
            <div class="row">
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                 @Html.DisplayNameFor(model => model.Register)
            </th>
             <th>
                Ação
            </th>
        </tr>
    </thead>
    <tbody>
      @foreach(var item in Model)
      {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Register)
            </td>
             <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id">Editar</a>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detailhes</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
      }
    </tbody>
</table>